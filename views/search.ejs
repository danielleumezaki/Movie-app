      <link href="/css/styles.css" rel="stylesheet" type ="text/css">
   </head>
   <body>
      <div class="container-fluid">
         <div class="section">
            <!-- Header -->
            <header>
               <div class="row">
                  <div class="col-12">
                     <h1>TOP RATED MOVIES</h1>
                  </div>
               </div>
            </header>
            <article>
               <div class="row">
                  <div class="col-12">
                     <div id="search">
                        <form action='/search' method='GET'>
                           <input name='searchTerm' />
                           <button type='submit'>Search</button>
                        </form>
                     </div>
                  </div>
               </div>
            </article>
            <main>
            <% let moviesFilter = movies.results %>
               <% for(let i = 0; i < moviesFilter.length; i++) { %>
              <% let movieLowerC = moviesFilter[i].original_title %>
              <% let movieLowerC2 =  movieLowerC.toLowerCase()%>
                     <% if (searchName == movieLowerC2) { %>
                     <div class="row">
                  <div class="col-12">
                     <a href="/movie/<%= moviesFilter[i].id %>" target="_blank"> <%= moviesFilter[i].original_title %> </a>
                  </div>
                  <div class="col-6">
                     <div id="firstCol">
                        <img src="https://image.tmdb.org/t/p/w500/<%=moviesFilter[i].poster_path%>" alt="blabla">
                        <br>
                     </div>
                  </div>
                  <div class="col-6">
                     <div id="secondCol">
                        <p> <strong>Overview: </strong><%=moviesFilter[i].overview %> </p>
                     </div>
                  </div>
               </div>
               <% } else { %>

        <% let results = movieLowerC2.filter(searchName,function() { %>
                <%=return movieLowerC2.includes(searchName);%>
                <% });%>
               <% } %>

                    <% } %>
               
            </main>
         </div>
      </div>
   </body>
</html>